<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="${blog.application.name}"/>

    <dubbo:registry protocol="zookeeper" address="${zookeeper.address}"/>

    <dubbo:consumer timeout="3000" retries="0" filter="DubboCatFilter"/>

    <dubbo:reference id="userFacade" interface="org.fanlychie.facade.UserFacade" check="false"/>
    <dubbo:reference id="articleFacade" interface="org.fanlychie.facade.ArticleFacade" check="false"/>

</beans>